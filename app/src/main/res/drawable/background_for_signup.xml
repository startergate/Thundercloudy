<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="2dp"
                android:color="#b6b6b6" />
            <gradient
                android:angle="0"
                android:type="linear"
                android:startColor="#f08080"
                android:endColor="#f7cac9" />
        </shape>
    </item>

</layer-list>